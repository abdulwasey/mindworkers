<% include ../partials/headers %>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Ongoing Projects</h4>
                        <p class="category">Click on project to see more details about it</p>
                    </div>
                    <div class="content table-responsive table-full-width">
                        <table class="table table-hover table-striped">
                            <thead>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Deadline</th>
                                <th>Client Contact</th>
                                <th>Manager</th>
                                <th>Application Type</th>
                            </thead>
                            <tbody>
                                <%var count=1;projects.forEach(project => {%>
                                <tr>
                                    <td><%=count;%></td>
                                    <td><%=project.title;%></td>
                                    <td><%=project.deadline;%></td>
                                    <td><%=project.client_contact;%></td>
                                    <td><%=project.manager;%></td>
                                    <td> <%=project.type;%></td>
                                    <td><%if(project.manager=="saikiran2211"){%><a
                                            href="/dashboard/project/edit/<%=project._id%>"><button
                                                class="btn btn-sm info">Edit</button><%}%></a></td>
                                        </tr>
                                        <%count++;});%>
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>


            <div class="col-md-12">
                <div class="card ">
                    <div class="header">
                        <h4 class="title">Projects Completed</h4>
                        <p class="category">Click on project to see more details about it</p>
                    </div>
                    <div class="content table-responsive table-full-width">
                        <table class="table table-hover">
                            <thead>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Deadline</th>
                                <th>Client Contact</th>
                                <th>Manager</th>
                                <th>Application Type</th>
                            </thead>
                            <tbody>
                                <%var count=1;projects.forEach(project => {if(project.status != "Ongoing"){%>
                                <tr>
                                    <td><%=count;%></td>
                                    <td><%=project.title;%></td>
                                    <td><%=project.deadline;%></td>
                                    <td><%=project.client_contact;%></td>
                                    <td><%=project.manager;%></td>
                                    <td> <%=project.type;%></td>
                                </tr>
                                <%count++;}});%>


                            </tbody>

                        </table>

                    </div>
                    <center><% if(count==1){%><h4>No projects completed yet please make it fast</h4><%}%></center> 
                        </div>
                    </div>


                </div>
            </div>
        </div>

        <footer class="footer">
            <div class="container-fluid">
                <nav class="pull-left">
                    <ul>
                        <li>
                            <a href="#">
                                Home
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                Company
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                Portfolio
                            </a>
                        </li>
                        <li>
                            <a href="#">
                               Blog
                            </a>
                        </li>
                    </ul>
                </nav>
                <p class="copyright pull-right">
                    &copy; <script>document.write(new Date().getFullYear())</script> <a href="http://www.creative-tim.com">Creative Tim</a>, made with love for a better web
                </p>
            </div>
        </footer>


    </div>
</div>


</body>

