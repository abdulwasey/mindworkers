<% include ../partials/headers %>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Edit Project</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/stylesheet.css">
    <!--[if IE 8]><script src="js/es5.js"></script><![endif]-->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/standalone/selectize.js"></script>
    <script src="/js/index.js"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jquery-typeahead/2.10.6/jquery.typeahead.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-typeahead/2.10.6/jquery.typeahead.js"></script>

</head>
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <!--   <h3>Got a new project want to share with your team ?</h3> -->
                        <h3 class="title" style="text-align: center;">Edit Project</h3>
                        <hr>
                    </div>
                    <div class="content">
                        <form action="/dashboard/project/<%=project._id%>?_method=PUT" method="POST">
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label>Posting as</label>
                                        <input type="text" class="form-control" name="project_manager"
                                            placeholder="Company" value="<%=project.manager%>" readonly>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Title</label>
                                        <input type="text" class="form-control" name="title"
                                            placeholder="KKTI PRIVATE LTD" value="<%=project.title%>">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Project Type</label>
                                        <select name="type" class="form-control">
                                            <option><%=project.type%></option>
                                            <option>Website</option>
                                            <option>Mobile App</option>
                                            <option>Desktop App</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Technologies Used</label>
                                        <textarea class="form-control" placeholder="Nodejs,ExpressJs,MongoDb" cols="50"
                                            rows="1" name="technologies_used"><%=project.technologies_used%></textarea>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Estimate</label>
                                        <input type="text" class="form-control" placeholder="30k"
                                            value="<%=project.estimate%>" name="estimate">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Deadline(<%=project.deadline%>)</label>
                                        <input type="date" class="form-control" placeholder="30k"
                                            value="<%=project.deadline%>" name="deadline">
                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>GitHub</label>
                                        <input type="text" class="form-control" name="git_link"
                                            placeholder="Http://www.github.com/mindworkers/project_name"
                                            value="<%=project.git_link%>">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Slack</label>
                                        <input type="text" class="form-control" name="slack"
                                            placeholder="salck.com/project_name">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Heroku</label>
                                        <input type="text" class="form-control" name="heroku_link"
                                            placeholder="http://www.projectname.herokuapp.com"
                                            value="<%=project.heroku_link%>">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Description</label>
                                        <textarea rows="5" class="form-control"
                                            placeholder="Tell us more about the project"
                                            name="description"><%=project.description%></textarea>
                                    </div>
                                </div>
                            </div>
                            <h4>Client Details</h4>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Name</label>
                                        <input type="text" class="form-control" name="client_name" placeholder="John"
                                            value="<%=project.client_name%>">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input type="text" class="form-control" name="client_email"
                                            placeholder="asd@gmail.com" value="<%=project.client_email%>">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Phone</label>
                                        <input type="number" class="form-control" name="client_contact"
                                            placeholder="847834583" value="<%=project.client_contact%>">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Company Name</label>
                                        <input type="text" class="form-control" name="client_company" placeholder="TCS"
                                            value="<%=project.client_company%>">
                                    </div>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-info btn-fill pull-right">Update Project</button>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <!--  <h3 style="color: red;text-align: center;">PROJECT CONDITIONS</h3> -->

                <p><span style="color: red;">* </span>Only you have a right of editing please make a update only if it
                    is mandatory</p>


            </div>

        </div>
    </div>
</div>

<% include ../partials/footer %>